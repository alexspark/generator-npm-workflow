{
  "name": "<%= modName %>",
  "main": "index.js",
  "version": "0.1.0",
  "devDependencies": {
    "browserify":"latest",
    "watchify":"latest",
    "jade":"latest",
    "node-sass":"latest",
    "live-server":"latest",
    "npm-run-all":"latest",
    "jshint":"latest",
    "rimraf":"latest",
    "karma":"latest",
    "mocha":"latest",
    "jshint":"latest"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "test": "mocha",
    "watch:test": "mocha -w",
    "build:scripts": "browserify -d index.js -o dist/build.js | tee index.js dist/build.js > /dev/null",
    "watch:scripts": "watchify -d index.js -o 'tee index.js dist/build.js > /dev/null",
    "build:views": "jade assets/views -o dist",
    "watch:views": "jade -w assets/views -o dist",
    "build:styles": "node-sass assets/styles -o dist",
    "watch:styles": "node-sass -w assets/styles -o dist",
    "build": "npm-run-all --parallel build:scripts build:views build:styles",
    "watch": "npm-run-all --parallel watch:views watch:scripts build:styles watch:styles",
    "serve": "live-server --port=9090 dist",
    "dev": "npm-run-all --parallel watch serve"
  },
  "author": {
    "name": "<%= author %>"
  }
}
